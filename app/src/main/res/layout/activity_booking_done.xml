<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingDoneActivity">

    <ImageView
        android:id="@+id/congoimg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/congoimg"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/congotxt"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/congotxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulations!"
        android:layout_centerInParent="true"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/congotxt"
        android:fontFamily="@font/poppinsmedium"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Your slot has been booked"
        android:textSize="16sp" />

</RelativeLayout>